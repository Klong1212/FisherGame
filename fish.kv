<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Image:#ภาพหน้าจอแสดงผล
                source: root.link
                allow_stretch: True
                keep_ratio: False
                size_hint: 1, 1
            Widget:# ช่องนับคะแนน
                size_hint: 0.1, 1
                id: rect_widget_points
                canvas.before:
                    Color:
                        rgba: 1, 0.84, 0, 1  # กรอปสีทอง
                    Line:
                        width: 2 
                        rectangle: (self.x, self.y, self.width, self.height)
                    Color:
                        rgba: 0, 0, 0, 1 
                    Rectangle:
                        size: rect_widget_points.size
                        pos: rect_widget_points.pos
                canvas:
                    Color:
                        rgba: 1, 1, 1, 1 
                    Rectangle:
                        size: rect_widget_points.width, root.score
                        pos: rect_widget_points.pos

            Widget:#หน้าจอแสดงผลการเล่น
                size_hint: 0.1, 1
                id: rect_widget_minigame
                canvas.before:
                    Color:
                        rgba: 1, 0.84, 0, 1  # กรอปทอง
                    Line:
                        width: 2 
                        rectangle: (self.x, self.y, self.width, self.height)
                    Color:
                        rgba: 0, 1, 0, 1 
                    Rectangle:
                        size: rect_widget_minigame.width, 100
                        pos: rect_widget_minigame.x , rect_widget_minigame.y+root.hi_game
                canvas:
                    Color:
                        rgba: 1, 0, 0, 1 
                    Rectangle:
                        size: rect_widget_minigame.width, 10
                        pos: rect_widget_minigame.x , rect_widget_minigame.y+root.hi
        BoxLayout:
            size_hint: 1,0.2
            orientation: 'horizontal'
            Button: #ปุ่ม สตาทถ้ากดจะเรียกใช่ฟังชั่นกด
                text: 'start'
                font_name: 'DAYDREAM.TTF' 
                font_size: '20sp'
                background_color: 0.55, 0.27, 0.07, 1
                on_press: root.on_click()
            Button: #ปุ่มสู้ถ้ากดตำแหน่งเราจะขึ้นถ้าปล่อยจะลง
                text: 'Fight'
                font_name: 'DAYDREAM.TTF' 
                font_size: '20sp'
                background_color: 0.55, 0.27, 0.07, 1
                on_press: root.on_button_down()
                on_release: root.on_button_up()
            Button: #ปุ่มBag ถ้ากดจะเข้าหน้าจอ Bag
                text: 'Bag'
                font_name: 'DAYDREAM.TTF' 
                font_size: '20sp'
                background_color: 0, 0, 1, 1
                size_hint: 0.2, 1
                on_release: app.root.current ="bag_screen"
ScreenManager: #ตัวควบคุมหน้าจอ
    id: sm
    StartScreen:
        name: "start_screen"
    MainScreen:
        name: "main_screen"
    BagScreen:
