#:kivy 1.1

<FishGame>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Back"
            FloatLayout:
                size_hint: 0.2,1
                Label:
                    text: "Fish Game"
                    font_size: 32

                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.5
            Button:
                text: "1"
            Button:
                text: "2"
                size_hint:0.5,1
