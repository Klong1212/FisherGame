#:kivy 1.1
<FishGame>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Run'
            Widget:
                size_hint: 0.2, 1
                id: rect_widget
                canvas:
                    Color:
                        rgba: 1, 0, 0, 1 
                    Rectangle:
                        size: 50, 50
                        pos: self.width / 2 - 25, root.hi
        BoxLayout:
            size_hint: 1,0.5
            orientation: 'horizontal'
            Button:
                text: 'Fight'
                on_press: root.on_button_click()
            Button:
                text: 'Bag'
                size_hint: 0.2, 1